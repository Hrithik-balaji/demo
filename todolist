#To do list
#simple list
set={}
op=input("Enter the choice")
print("1.View/
       2.create/
       3.delete/
      ")
if op.lower()=="View":
       view()
elif op.lower()=="create":
       create()
elif op.lower()=="delete":
       delete()
else:
       print("Thanks for visiting")

#adding function
def create():
       while(true):       
              text=input("Enter the task:")
              set.add(text)
              print("Task added! do you want to add:Y/N")
              op=input()
              if op=="N":
                     break
def view():
       for i in range(len(set)):
              print(set[i],end="\n")

#remove or add to done
#view
def delete():
       set.pop()
