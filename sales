class Assignment1{
    public static void main(String[] args) {
        int itemPrice[]={25,15,23,11,50};
 
        double taxRate=0.08;
        double discountPercentage=0.10;
        int subtotal=0;
        for(int i=0;i<5;i++)
        {
            subtotal=subtotal+itemPrice[i];
        }
        double taxAmount=(double)subtotal*taxRate;
        double discountAmount=(double)subtotal*discountPercentage;
        double totalCost=(double)(subtotal+discountAmount+taxAmount);
        System.out.println("substotal:"+subtotal);
        System.out.println("tax amount:"+taxAmount);
        System.out.println("discount amount"+discountAmount);
        System.out.println("total cost:"+totalCost);
    }
}
